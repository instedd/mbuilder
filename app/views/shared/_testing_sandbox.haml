.testing-sandbox{'ng-controller' => 'MessagesController', 'ng-init' => "applicationId=#{application.id}"}
  %h4 Testing Sandbox
  %small Send messages to test your triggers
  %hr.shadow
  .control-group
    %label{for: :from} From
    .controls
      %input.span12{'ng-model' => 'from', type: :text, name: :from, autofocus: true}

  .control-group
    %label{for: :body} Message
    .controls
      %textarea.span12{'ng-model' => 'body', :rows => 5}
  %button.btn.btn-small.btn-warning.w-hide{'ng-click' => 'send()'} Send

  %div{'ng-show' => 'loading'}
    %hr
    %label Loading ...

  %div{'ng-show' => 'actions.length'}
    %hr
    %label Performed actions
    %ul.p-actions
      %li{'ng-repeat' => 'action in actions'}
        {{action}}
