.title= application.name

%ul.nav.nav-tabs
  %li{class: @application_tab == :overview ? 'active' : nil}
    = link_to "Overview", application
  %li{class: @application_tab == :triggers ? 'active' : nil}
    = link_to "Triggers", application_message_triggers_path(application)
  %li{class: @application_tab == :external_services ? 'active' : nil}
    = link_to "External Services", application_external_services_path(application)
  %li{class: @application_tab == :recent_activity ? 'active' : nil}
    = link_to "Recent Activity", application_logs_path(application)
  %li{class: @application_tab == :channels ? 'active' : nil}
    = link_to "Channels", application_channels_path(application)
  %li{class: @application_tab == :data ? 'active' : nil}
    = link_to "Data", application_data_path(application)
  %li{class: @application_tab == :settings ? 'active' : nil}
    = link_to "Settings", edit_application_path(application)
