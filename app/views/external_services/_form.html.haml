= form_for [application, external_service] do |f|
  .middle
    - unless external_service.new_record?
      .field
        = f.label :name
        = f.text_field :name, :disabled => true, :readonly => true, :class => "w30"
    .field
      = f.label :url, 'URL'
      = f.text_field :url, :class => "w50"
    = link_to 'Update Manifest', update_manifest_application_external_service_path(application, external_service), :method => :put, :class => 'fsync' if external_service.id
    - unless external_service.new_record?
      .external_service_settings
        %p Settings
        .field
          = f.label :base_url, 'Base URL'
          = f.text_field :base_url, :class => "w30"
        = f.fields_for :global_variables, external_service.global_variables do |variables_form|
          .field
            = variables_form.label :value, variables_form.object.display_name
            = variables_form.hidden_field :name
            = variables_form.text_field :value, :class => "w30"

      .steps
        - if external_service.external_service_steps.any?
          %p Steps
          - external_service.external_service_steps.each do |step|
            %div
              %a{:class => "#{step.icon.index('http') == 0 ? 'lpgear' : "lp#{step.icon}" }"}
                %span= step.display_name
                - unless step.variables.empty?
                  %span.greytext
                    &rarr;
                    = step.variables.map {|variable| variable.display_name }.join ", "
                - unless step.response_variables.empty?
                  %span.greytext
                    &larr;
                    = step.response_variables.map {|variable| variable.display_name }.join ", "
  %hr
    - if external_service.new_record?
      %button.white{:type => "submit"} Save
    - else
      %button.white{:type => "submit"} Update
    = link_to 'Cancel', application_external_services_path(application)
