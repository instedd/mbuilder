- content_for :html_title do
  MBuilder

- content_for :app_logo do
  - image_tag "/assets/instedd-bootstrap/header/logos/mbuilder.png"

- content_for :app_version do
  = Mbuilder::Application.config.version_name

- top_nav_bar do
  - top_nav_bar_item 'Home', root_path
  - top_nav_bar_item 'Applications', applications_path, @application_tab.not_nil?
  - top_nav_bar_item 'Tour', '#'
  - top_nav_bar_item 'Community', '#'
  - top_nav_bar_item 'Help', '#'

- content_for :app_header do
  - if @application_tab.not_nil?
    - breadcrumb do
      - breadcrumb_item application.name, application_path(application)
      - breadcrumb_item @application_tab.to_s.humanize

= render template: 'instedd/application'
