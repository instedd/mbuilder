!!!
%html
  %head
    %title MBuilder
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
%body
  .navbar.navbar-fixed-top
    .navbar-inner
      .container-fluid
        %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.brand{:href => root_path} MBuilder
        - unless @hide_navbar
          .nav-collapse.collapse
            - if current_user
              .btn-group.pull-right.user
                %a.btn.btn-link{"data-toggle" => "dropdown", href: "#"}
                  = current_user.email
                  %i.ic-cog
                %ul.dropdown-menu
                  %li= link_to "Settings", guisso_settings_path, "target" => "_blank"
                  %li= link_to "Sign out", guisso_sign_out_path_for(:user, after_sign_out_url: root_url), method: :delete
            - else
              .btn-group.pull-right.user
                %a.btn.btn-link{href: guisso_sign_in_path_for(:user)}
                  Sign in

  .container-fluid.body
    - if flash[:notice].present?
      .alert-container
        .alert.alert-success
          %button.close{"data-dismiss" => "alert", "type" => "button"} x
          = flash[:notice]
    - if flash[:alert].present?
      .alert-container
        .alert.alert-block
          %button.close{"data-dismiss" => "alert", "type" => "button"} x
          = flash[:alert]

    = yield

  .footer-container
    .footer
      .footer-content
        .right
          Version: #{Mbuilder::Application.config.version_name}
